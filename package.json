{
  "name": "code-flattener",
  "displayName": "CodeFlattener",
  "version": "1.5.2",
  "description": "Transform your codebase into a perfectly structured markdown document - Boost AI coding assistants with full context, simplify code reviews, and share your projects effortlessly",
  "publisher": "GiuseppeTuritto",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Formatters"
  ],
  "icon": "images/Flattener.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "markdown": "github",
  "qna": "marketplace",
  "extensionDependencies": [],
  "extensionPack": [],
  "readme": "MARKETPLACE.md",
  "pricing": "Free",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-flattener.flattenCode",
        "title": "Flatten Code"
      }
    ],
    "configuration": {
      "title": "CodeFlattener",
      "properties": {
        "codeFlattener.outputFolder": {
          "type": "string",
          "default": "CodeFlattened",
          "description": "Name of the folder where flattened source code will be saved"
        },
        "codeFlattener.excludePatterns": {
          "type": "array",
          "default": [
            "bin/**",
            "obj/**",
            "node_modules/**",
            "**/CodeFlattened/**",
            "**/*.dll",
            "**/*.exe",
            "**/*.pdb"
          ],
          "description": "Patterns to exclude from processing (glob format)"
        },
        "codeFlattener.includePatterns": {
          "type": "array",
          "default": [],
          "description": "Patterns to include in processing (glob format). If empty, all files will be processed except those matching exclude patterns"
        },
        "codeFlattener.maxFileSizeBytes": {
          "type": "number",
          "default": 10485760,
          "description": "Maximum file size in bytes for analysis (default: 10MB)"
        },
        "codeFlattener.maxOutputFileSizeBytes": {
          "type": "number",
          "default": 5242880,
          "description": "Maximum output file size in bytes before rotation (default: 5MB)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "keywords": [
    "source code",
    "flattener",
    "documentation",
    "AI",
    "LLM",
    "markdown",
    "code to markdown",
    "code summary",
    "chatgpt",
    "gpt",
    "large language model",
    "code export",
    "vscode extension"
  ],
  "author": "GTuritto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GTuritto/SourceCodeFlatener_Extension.git"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "glob": "^7.2.0"
  }
}
